#!/usr/bin/env sh

. "$(uselib std)"
depCheck xclip

if [ $# != 1 ]; then
  printf >&2 "%s: %s\n" "$(basename $0)" "a tool to copy images to clipboard"
  printf >&2 "Usage: %s\n" "$(basename $0) <FILE>"
  exit 1
fi

if [ ! -f "$1" ]; then
  printf >&2 "%s: %s\n" "$(basename $0)" "file does not exist: $1"
  exit 1
fi

type=$(file -b --mime-type "$1") || exit 1
xclip -sel clipboard -t "$type" < "$1"
