#!/usr/bin/env bash

# Runs "$@" and waits the user to press q.

if [ $# = 0 ]; then
  printf >&2 "%s\n" "Usage: $(basename $0) <command> [command]"
  exit 1
fi

while true; do
  "$@"
  exitCode="$?"
  printf '\033[2 q'
  printf '\n(EC %d):' "$exitCode"
  while read -sn1 ch; do
    case "$ch" in
      q) exit "$exitCode" ;;
      R) clear && break ;;
      '') exit "$exitCode" ;;
      *) ;;
    esac
  done
done
