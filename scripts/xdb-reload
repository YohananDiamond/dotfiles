#!/usr/bin/env bash
#
# TODO: rename this to... idk, dotf.res.reload?

set -e
set -o pipefail

PROGNAME=$(basename "$0")

usage() {
  printf >&2 "Usage: %s\n" "$PROGNAME"
  exit 1
}

main() {
  [ $# != 0 ] && usage
  [ "$DISPLAY" ] && { gen-res xresources | xrdb; }
  gen-res dotcfg | dotcfg stdin-send >/dev/null
  gen-config
}

main "$@"
