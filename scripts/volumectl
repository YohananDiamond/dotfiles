#!/usr/bin/env sh

showHelp() {
  printf >&2 "Usage: %s\n" "$(basename $0) { inc | dec | mute }"
  exit 1
}

[ $# != 1 ] && showHelp

case "$1" in
  dec|decrease) amixer set Master 5%- ;;
  inc|increase) amixer set Master 5%+ ;;
  mute|togglemute) amixer -D pulse set Master 1+ toggle ;;
  *)
    printf >&2 "Invalid option: %s\n" "$1"
    showHelp
    ;;
esac
