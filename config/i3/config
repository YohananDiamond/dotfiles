# -*- origami-fold-style: triple-braces -*-
# vim: foldmethod=marker
# i3 (v4.0) config file
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Change main font
font pango:Cascadia Code Regular 10

# Some Variables {{{

set $mod Mod4
set $alt Mod1

# Define names for default workspaces for which we configure key bindings later on.
set $ws1   "1"
set $ws2   "2"
set $ws3   "3"
set $ws4   "4"
set $ws5   "5"
set $ws6   "6"
set $ws7   "7"
set $ws8   "8"
set $ws9   "9"
set $ws10 "10"

# }}}
# Mappings {{{

# Commands {{{

# Start a Terminal
bindsym $mod+Return exec st -t "Suckless Terminal"

# Notes
bindsym $mod+n exec st -t "Note" -e "edn"

# Rofi
bindsym $mod+space exec --no-startup-id lnc

# Show power menu (made by me :P)
bindsym $mod+Shift+o exec "env st-popup pow"

# Editor!
# bindsym $mod+m exec "emacs-ttyorgui emacs"

# Print Screen
bindsym Print exec flameshot screen -c
bindsym $mod+Print exec flameshot gui

# Pulse Audio controls
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle

# Media player key bindings
bindsym XF86AudioPlay exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Brightness key bindings
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
# bindsym XF86PowerOff exec "env st-popup pow" # Disabled.

# }}}
# General {{{

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Kill focused window
bindsym $mod+Shift+q kill

# Change focus and move windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Cursor key alternative
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Change split orientation (h<->v)
bindsym $mod+u split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+p focus mode_toggle

# sticky!
bindsym $mod+o sticky toggle

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# }}}
# Resizing {{{

bindsym $mod+r mode "resize"

mode "resize" {
    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# }}}

# }}}
# Bar {{{

bar {
    status_command i3status -c ~/.config/i3/i3status.conf
    tray_output primary
    separator_symbol "·"
    position top

    colors {
        background #282c34
        statusline #abb2bf
        separator  #383c44
        ################## Border  Back    Text
        focused_workspace  #3b84c0 #3b84c0 #282c34
        active_workspace   #3b84c0 #3b84c0 #282c34
        inactive_workspace #282c34 #282c34 #abb2bf
        urgent_workspace   #e06c75 #e06c75 #282c34
        binding_mode       #d19a66 #d19a66 #282c34
        ##########################################
    }
}

# }}}
# Aesthetics {{{

# Window decoration colors
####################### Border  Backgr. Text    Indict.
client.placeholder      #5c6370 #5c6370 #282c34 #5c6370
client.background       #3b84c0 #3b84c0 #282c34 #3b84c0
client.focused          #3b84c0 #3b84c0 #282c34 #3b84c0
client.unfocused        #282c34 #282c34 #abb2bf #282c34
client.focused_inactive #abb2bf #abb2bf #282c34 #abb2bf
client.urgent           #e06c75 #e06c75 #282c34 #e06c75
#######################################################

# }}}
# General Options & Startup Commands {{{

focus_follows_mouse no
exec --no-startup-id xset r rate 400 35
exec --no-startup-id compton -b
exec --no-startup-id xsetroot -cursor_name left_ptr &
exec --no-startup-id ~/.local/bin/quick-check
exec_always --no-startup-id exec bash $HOME/.fehbg
exec --no-startup-id xinput set-prop 16 323 1 # Touchpad: tap to click
exec --no-startup-id xinput set-prop 16 305 1 # Touchpad: natural scrolling

# Applets
exec --no-startup-id nm-applet

# Systemd: disable power key
exec --no-startup-id systemd-inhibit --what=handle-power-key sleep infinity

# }}}
# Rules {{{

for_window [class="float"] floating enable
for_window [class="^.*"] border pixel 0

# Temp Rules (for specific windows that I found problems)
for_window [title="GLFW.jl"] floating enable

# }}}
