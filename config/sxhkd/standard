# vim: ft=conf fdm=marker
#
# a set of keybindings for general use (in any wm I might use, not only
# bspwm)
# keys to use someday, maybe: XF86PowerOff

# restart picom
super + r; c
    pkill picom; picom -b

# terminal
super + Return
    $TERMINAL

# program launcher
super + space
    dmenurun

# power menu
super + shift + o
    fzpow

# screenshot related
Print
    runnsend flamewrapper fullc
super + Print
    runnsend flamewrapper gui
ctrl + Print
    runnsend flamewrapper full

# mounting
super + F10
    fzmount
super + shift + F10
    fzumount

# wallpaper
super + w
    setbg

# audio
XF86AudioLowerVolume
    amixer set Master 5%-
XF86AudioRaiseVolume
    amixer set Master 5%+
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

# media player
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous

# brightness (not working)
# XF86MonBrightnessDown
#     xbacklight -dec 5
# XF86MonBrightnessUp
#     xbacklight -inc 5

# etc
super + o; c
    $TERMINAL -c float -g 65x10 -e runread cal -3
super + n
    termup nnn
super + o; d
    termup nnn $DOTFILES
super + o; super + d
    termup zsh -ic "br $DOTFILES"
super + b
    runnsend qutebrowser
super + o; w
    termup nnn $F_WIKI
super + o; super + w
    termup zsh -ic "br $F_WIKI"
super + o; b
    runnsend bkmk
super + o; p
    termup zsh -ic "Wp n"

