# -*- mode: conf -*-
# vim: ft=conf fdm=marker
#
# a set of keybindings for general use, working independently of wm

# start/restart compositor
super + control + shift + c
    start-compositor

# terminal
# super + Return
#     notify-send dotf.wrap.terminal

# super + shift + Return
#     termup zsh

# program launcher
super + space
    runnsend error-and-output fzrun

# power menu
super + shift + o
    runnsend error-and-output fzpow

# screenshot related
# Print
#     runnsend error flamew fullc
# super + Print
#     runnsend error flamew gui
# ctrl + Print
#     runnsend error flamew full

super + n
    termup $FILEMAN
super + shift + n
    termup -f $FILEMAN

super + c
    runnsend error ksnip -r
    # runnsend error flameshot gui
    # runnsend error flamew gui

# super + alt + c
#     runnsend error flamew fullc
# super + shift + c
#     runnsend error flamew full

# mounting
super + F10
    termup -f runread fzmount -m
super + shift + F10
    termup -f runread fzmount -u

# wallpaper
super + w
    setbg

# panic button (some resets)
super + alt + p
    xcalib -clear

# volume management
XF86Audio{Lower,Raise}Volume
    volumectl {dec,inc}
XF86AudioMute
    volumectl togglemute
super + {comma,period}
    volumectl {dec,inc}
super + y
    volumectl togglemute

# music player
XF86AudioPlay
    playerctl play-pause
XF86Audio{Next,Prev}
    playerctl {next,previous}
super + alt + {comma,period}
    playerctl {previous,next}
super + alt + y
    playerctl play-pause

# XF86MonBrightness{Down,Up}
super + {minus,equal}
    backlightctl mod {-10,10}

# toggle red screen
super + F12
    redscr toggle 70

# show a report (time, current window, CPU usage, battery etc.)
super + r
    display-report

# quick apps
super + b
    runnsend error $BROWSER

# toggle tray
# super + y
#     pkill stalonetray || stalonetray -c "$XDG_CACHE_HOME/gen/stalonetrayrc"

# editor
super + e
    graphedit

# editor
super + shift + e
    dotf.wrap.terminal -c float -g 100x35 -e $EDITOR

# simulate scolling with xdotool
super + {Up,Down,Left,Right}
    xdotool click {4,5,6,7}

# simulate zoom
super + ctrl + {Up,Down,Left,Right}
    xdotool keydown ctrl click {4,5,6,7}

# open mode
super + o
    @enter open && notify-send "ENTER OPEN"

mode open
a
    dotf.wrap.terminal -c float -g 130x35 -e sh -c "acw-today-report 2>&1 | vimpager" && @escape
c
    dotf.wrap.terminal -c float -g 65x10 -e runread cal -3 && @escape
super + c
    dotf.wrap.terminal -c float -g 66x25 -e runread cal -y && @escape
m
    dotf.wrap.terminal -c float -e pulsemixer && @escape
y
    dotf.wrap.terminal -c float -g 90x25 -e ytop && @escape
shift + c
    dotf.wrap.terminal -c float -g 100x35 -e calc && @escape
t
    dotf.wrap.terminal -e tmux-tray && @escape
shift + t
    dotf.wrap.terminal -c float -g 100x35 -e tmux-tray && @escape
b
    runnsend error-and-output bkmk menu && @escape
endmode

# Mouse middle button paste prevention
# I don't know why but this disables middle-mouse-paste without preventing the middle button from working
# Source: https://unix.stackexchange.com/a/472464
# ~button2
#     echo -n | xsel -n -i
# ~control + c
#     echo -n | xsel -n -i
# ~control + shift + c
#     echo -n | xsel -n -i
# ~control + x
#     echo -n | xsel -n -i
