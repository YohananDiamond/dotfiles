# vim: ft=conf foldmethod=marker

# Restarting {{{

# Restart Picom
super + r; c
    pkill picom; picom -b

# }}}
# Programs {{{

# Terminal
super + Return
    $TERMINAL

# Program Launcher
super + space
    dmenurun

# Power Menu
super + shift + o
    fzpow

# Print Screen
Print
    runnsend flamewrapper fullc
super + Print
    runnsend flamewrapper gui
ctrl + Print
    runnsend flamewrapper full

# Mounting
super + F10
    fzmount
super + shift + F10
    fzumount

# Other tools
super + o; c
    $TERMINAL -c float -g 65x10 -e runread cal -3
super + n
    termup nnn
super + o; d
    termup nnn $DOTFILES
super + b
    runnsend qutebrowser
super + o; w
    termup nnn $F_WIKI
super + o; b
    runnsend bkmk

# Reload wallpaper
super + w
    setbg

# }}}
# Extra Keys {{{

# Audio
XF86AudioLowerVolume
    amixer set Master 5%-
XF86AudioRaiseVolume
    amixer set Master 5%+
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

# Media Player
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous

# Brightness
XF86MonBrightnessDown
    xbacklight -dec 5
XF86MonBrightnessUp
    xbacklight -inc 5

# Some other keys: XF86PowerOff

# }}}
