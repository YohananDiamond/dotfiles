# vim: ft=conf fdm=marker

# a set of keybindings for general use, working idnependently of wm

# restart picom
super + control + shift + c
    pkill picom; picom -b

# terminal
super + Return
    $TERMINAL

# program launcher
super + space
    fzrun

# power menu
super + shift + o
    runnsend fzpow

# screenshot related
Print
    runnsend flamew fullc
super + Print
    runnsend flamew gui
ctrl + Print
    runnsend flamew full

# mounting
super + F10
    termup -f runread fzmount -m
super + shift + F10
    termup -f runread fzmount -u

# wallpaper
super + w
    setbg

# panic button (some resets)
super + alt + p
    xcalib -clear

# audio
XF86AudioLowerVolume
    amixer set Master 5%-; pkill -RTMIN+10 dwmblocks # TODO: make these commands lighter by getting the PID of dwmblocks, storing it somewhere and then doing this
XF86AudioRaiseVolume
    amixer set Master 5%+; pkill -RTMIN+10 dwmblocks
XF86AudioMute
    amixer -D pulse set Master 1+ toggle; pkill -RTMIN+10 dwmblocks

# media player
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous

# brightness (not working)
# XF86MonBrightnessDown
#     xbacklight -dec 5
# XF86MonBrightnessUp
#     xbacklight -inc 5

# toggle red screen
super + F12
    redscr toggle 70

# show a report (time, current window, CPU usage, battery etc.)
super + equal
    display-report

# quick apps
super + b
    runnsend qutebrowser

# toggle tray
super + y
    pkill stalonetray || stalonetray -c "$XDG_CACHE_HOME/gen/stalonetrayrc"

# super-o apps
super + o; c
    $TERMINAL -c float -g 65x10 -e runread cal -3
super + o; shift + c
    $TERMINAL -c float -g 75x25 -e calc
super + o; b
    runnsend bkmk
super + o; a
    runnsend action-launcher
super + o; j
    termup ,journalentry # ",journalentry" is a private script
