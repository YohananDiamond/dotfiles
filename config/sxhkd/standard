# -*- mode: conf -*-
# vim: ft=conf fdm=marker
#
# a set of keybindings for general use, working idnependently of wm

# start/restart compositor
super + control + shift + c
    start-compositor

# terminal
super + Return
    $TERMINAL
super + shift + Return
    $TERMINAL -c 'float'

# program launcher
super + space
    runnsend error-and-output fzrun

# power menu
super + shift + o
    runnsend error-and-output fzpow

# screenshot related
Print
    runnsend error flamew fullc
super + Print
    runnsend error flamew gui
ctrl + Print
    runnsend error flamew full

# mounting
super + F10
    termup -f runread fzmount -m
super + shift + F10
    termup -f runread fzmount -u

# wallpaper
super + w
    setbg

# panic button (some resets)
super + alt + p
    xcalib -clear

# volume management
XF86Audio{Lower,Raise}Volume
    volumectl {dec,inc}
XF86AudioMute
    volumectl togglemute
super + {comma,period}
    volumectl {dec,inc}
super + y
    volumectl togglemute

# music player
XF86AudioPlay
    playerctl play-pause
XF86Audio{Next,Prev}
    playerctl {next,previous}
super + alt + {comma,period}
    playerctl {previous,next}
super + alt + y
    playerctl play-pause

# brightness
XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 20
super + {minus,equal}
    xbacklight -{dec,inc} 20
    
# toggle red screen
super + F12
    redscr toggle 70

# show a report (time, current window, CPU usage, battery etc.)
super + r
    display-report

# quick apps
super + b
    runnsend error $BROWSER

# toggle tray
# super + y
#     pkill stalonetray || stalonetray -c "$XDG_CACHE_HOME/gen/stalonetrayrc"

# editor
super + e
    graphedit

# window switcher
super + s
      dswitcher

# super-o apps
super + o; c
    $TERMINAL -c float -g 65x10 -e runread cal -3
super + o; shift + c
    $TERMINAL -c float -g 75x25 -e calc
super + o; b
    runnsend error-and-output bkmk menu
super + o; j
    runnsend error-and-output @journalentry
super + o; d
    runnsend error $BROWSER https://discordapp.com/channels/@me
