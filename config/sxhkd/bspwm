# vim: ft=conf fdm=marker
#
# keybindings for bspwm
# not sure if i'm using all of them

# restart polybar
super + alt + r; p
    start-polybar

# restart bspwm
super + shift + r
    bspc wm -r

# close or kill window
super + {_,shift + }q
    bspc node -{c,k}

# toggle fullscreen
super + m
    bspwm-togglefull

# set the window state
super + {t,shift + t,f}
    bspc node -t {tiled,pseudo_tiled,floating}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the next/previous node in the current destkop
super + shift + bracket{left,right}
    bspc node -f {next,prev}.local

# focus the last desktop
super + Tab
    bspc desktop -f last

# preselect the direction for next window
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# expand a window by moving one of its sides outward
ctrl + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
ctrl + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the node in the given direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}
