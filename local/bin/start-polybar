#!/usr/bin/env sh

# A script to start up polybar.

source ~/.local/lib/ystd.sh
depCheck polybar mktemp

tempLog="$(mktemp "/tmp/polybar.log.XXXXXXXX")"

if [ -z "$tempLog" ]; then
  printf >&2 "Could not generate temp file."
  exit 1
fi

# Terminate already running polybar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do
  sleep 1
done

# Launch polybar
polybar main >"$tempLog" 2>"$tempLog"
