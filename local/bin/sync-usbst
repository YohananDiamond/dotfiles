#!/usr/bin/env sh

# A simple script to sync some things from my USB station (local to actual USB)
# I still have to explain this.

for prog in rsync; do
  if ! type $prog >/dev/null 2>/dev/null; then
    echo "error: ${prog} not found."
    exit 1
  fi
done

USB_STATION="${USB_STATION:-/mnt/usb-main/usb-station}"
rsync -rtvuc "${DOTFILES}/config/nvim/init.vim" "${USB_STATION}/config/nvim/init.vim"
rsync -rtvuc --delete "${DOTFILES}/config/nvim/autoload/" "${USB_STATION}/config/nvim/autoload"
rsync -rtvuc --delete "${HOME}/.cache/nvim-plugs/" "${USB_STATION}/config/nvim/bundle"
