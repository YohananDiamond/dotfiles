#!/usr/bin/env sh

# An opener script based off nuke.
# https://github.com/jarun/nnn/blob/master/plugins/nuke

# Dependencies (local to this repo): termup, runpage

# Environment Variables
# OPEN_GUI: whether the file should be always opened on a GUI
# application.

# Options
set -f -o noclobber -o noglob

# Assist Functions
#   exists: if a command exists
#   try_run: checks if a command exists. If it exists, run it and exit the
# script.
#   try_run_t: only runs if OPEN_GUI is unset
#   try_run_g: only runs if OPEN_GUI is set
#   try_run_tg: runs if OPEN_GUI is unset, but also runs if OPEN_GUI is
# set, but through the "termup" script.
exists() { type "$1" >/dev/null 2>/dev/null; }
try_run() {
  exists "$1" || return
  if [ -n "$OPEN_GUI" ]; then
    "$@" >/dev/null 2>/dev/null
  else
    "$@"
  fi
  exit 0
}
try_run_t() { [ -z "$OPEN_GUI" ] || return; try_run "$@"; }
try_run_g() { [ -n "$OPEN_GUI" ] || return; try_run "$@"; }
try_run_tg() { try_run_t "$@"; try_run_g termup "$@"; }

IFS="$(printf '%b_' '\n')"; IFS="${IFS%_}" # protect trailing \n
PATH=$PATH:"${XDG_CONFIG_HOME:-$HOME/.config}/nnn/plugins"

FILE="$1"
FILENAME=$(basename "$1")
EXT="${FILENAME##*.}"
if ! [ -z "$EXT" ]; then
  EXT="$(printf "%s" "$EXT" | tr '[:upper:]' '[:lower:]')"
fi

handle_pdf() {
  try_run_g zathura "$FILE"
  try_run_t runpage pdftotext -l 10 -nopgbrk -q -- "$FILE" -
  try_run_t mutool draw -F txt -i -- "$FILE" 1-10
  try_run_t exiftool "$FILE"
}

handle_audio() {
  exists mocp && try_run_t mocplay "$FILE" "opener"
  try_run_tg mpv "$FILE"
  try_run_t mediainfo "$FILE"
  try_run_t exiftool "$FILE"
}

handle_video() {
  try_run_g smplayer "$FILE"
  try_run_g mpv "$FILE"
  try_run_t runpage mediainfo "$FILE"
  try_run_t runpage mediainfo "$FILE"
}

handle_ext() {
  case "$EXT" in
    a|ace|alz|arc|arj|bz|bz2|cab|cpio|deb|gz|jar|lha|lz|lzh|lzma|lzo|rpm|rz|t7z|tar|tbz|tbz2|tgz|tlz|txz|tZ|tzo|war|xpi|xz|Z|zip)
      try_run_t runpage atool --list -- "$FILE"
      try_run_t runpage bsdtar --list --file "$FILE"
      ;;
    rar) try_run_t runpage unrar lt -p- -- "$FILE" ;;
    7z) try_run_t runpage 7z l -p -- "$FILE" ;;
    pdf) handle_pdf ;;

    aac|flac|m4a|mid|midi|mpa|mp2|mp3|ogg|wav|wma)
      handle_audio ;;

    avi|mkv|mp4)
      handle_video ;;

    torrent)
      try_run_t rtorrent "$FILE"
      try_run_t transmission-show -- "$FILE"
      ;;

    odt|ods|odp|sxw)
      try_run_t runpage odt2txt "$FILE" ;;

    md) try_run_tg runpage glow -w 72 -s dark "$FILE" ;;

    htm|html|xhtml)
      try_run_t runpage w3m -dump "$FILE"
      try_run_t runpage lynx -dump -- "$FILE"
      try_run_t runpage elinks -dump "$FILE"
      try_run_g xdg-open "$FILE"
      ;;

    json)
      try_run_t runpage jq --color-output . "$FILE"
      try_run_t runpage python -m json.tool -- "$FILE"
      ;;
  esac
}

handle_multimedia() {
  case "$1" in
    image/*)
      try_run_g sxiv "$FILE"
      try_run_t runpage viu -n "$FILE"
      try_run_t runpage img2txt --gamma=0.6 -- "$FILE"
      try_run_t runpage exiftool "$FILE"
      ;;

    application/pdf) handle_pdf ;;
    audio/*) handle_audio ;;
    video/*) handle_video ;;
  esac
}

handle_mime() {
  case "$1" in
    text/troff) try_run_t runpage man -l "$FILE" ;;
    text/*) try_run_tg less "$FILE" ;;
    */xml) try_run_t runpage cat "$FILE" ;;
    image/vnd.djvu)
      try_run_t runpage djvutxt "$FILE"
      try_run_t runpage exiftool "$FILE"
      ;;
  esac
}

handle_fallback() {
  try_run_g xdg-open "$FILE"
  try_run_t runpage printf "*** File Details ***\n%s" "$(file --dereference --brief $FILE)"
}

handle_blocked() {
  case "$1" in
    application/x-sharedlib) exit 1 ;;
    application/x-shared-library-la) exit 1 ;;
    application/x-executable) exit 1 ;;
    application/x-shellscript) exit 1 ;;
  esac
}

MIMETYPE="$(file --dereference --brief --mime-type -- $FILE)"
handle_blocked "$MIMETYPE"
handle_ext
handle_multimedia "$MIMETYPE"
handle_mime "$MIMETYPE"
handle_fallback
exit 1
