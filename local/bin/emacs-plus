#!/usr/bin/env sh

# Initial checks
[ $# -gt 0 ]

# The thing
case "${1}" in
    emacs)
	shift
	if [ -t 1 ]; then
	    exec emacs -nw $@
	else
	    exec emacs $@
	fi
	;;
    emacsclient)
	shift
	if [ -t 1 ]; then
	    exec emacsclient -a "" -t $@
	else
	    exec emacsclient -a "" $@
	fi
	;;
    *)
	echo "Bad command! ${1}"
	exit 1
	;;
esac
