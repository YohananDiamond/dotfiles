#!/usr/bin/env sh
# edn - Edit Notes

NOTEDIR=~/git/personal/wiki

if [ $# = 0 ]; then
    choice="$(echo "$(basename "${NOTEDIR}/"*)" | sed 's/ /\n/g; s/\.md$//g' | fzf)"
    [ -z "${choice}" ] && exit 1
    args="${choice}"
else
    args="$(echo "$@" | sed 's/ /-/g')" # Do only one step of the arg thing, which is removing spaces. That'll make using more than one arg easier.
fi

exec nvim "+EditNote ${args}"
