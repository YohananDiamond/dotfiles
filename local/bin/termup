#!/usr/bin/env sh

# Pops up a new terminal window.

if [ $# = 0 ]; then
  echo "You need to specify at least one argument."
  exit 1
elif [ -z "$TERMINAL" ]; then
  echo "\$TERMINAL should be set."
  exit 1
fi

# "Floating" popup arg. Will make this better later.
if [ "$1" = "-f" ]; then
  $TERMINAL -c float -e runsane "${@:2}"
else
  $TERMINAL -e runsane "$@"
fi
