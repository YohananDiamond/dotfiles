#!/usr/bin/env sh

# Pops up a new terminal window.

if [ $# = 0 ]; then
  printf >&2 "%s\n" "Usage: $(basename $0) <command> [command]"
  exit 1
elif [ -z "$TERMINAL" ]; then
  printf >&2 "Variable %s not set\n" '$TERMINAL'
  exit 1
fi

# "Floating" popup arg. Will make this better later.
if [ "$1" = "-f" ]; then
  $TERMINAL -c float -e runsane "${@:2}"
else
  $TERMINAL -e runsane "$@"
fi
