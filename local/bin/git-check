#!/usr/bin/env bash

if [ $# != 1 ]; then
  printf >&2 "%s\n" "Usage: $(basename $0) <repo-path>"
  exit 1
fi

cd "$1" || exit

if git status -sb; then
  printf '\e[2 q'
  while [ -z "$EXIT" ]; do
    printf "%s\n" '::::: [d]iff, [a]dd-commit, [p]ull, pu[s]h, [f]etch, [l]og, [q]uit'
    printf '\e[38;5;11m(git)\e[m Î»> '
    read -n1 ch; echo
    case "$ch" in
      d) git add .
        git diff HEAD
        ;;
      a) git add . \
        && git commit ;;
      l) git log --all --oneline ;;
      p) git pull ;;
      s) git push ;;
      f) git fetch ;;
      "") EXIT=0 ;;
      q) EXIT=0 ;;
      ) EXIT=0 ;;
      "") clear ;;
      *) printf 'Invalid option: "%s"\n' "$ch" ;;
    esac
  done
  exit "$EXIT"
else
  exit 1
fi
